<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@Page.Title</title>
        <link href="/content/themes/@(Page.Theme)/layout.css" rel="stylesheet" type="text/css" />
        <link href="/content/themes/@(Page.Theme)/styles.css" rel="stylesheet" type="text/css" />
        @RenderSection("head", required:false)
    </head>
    <body>
        <div id="wrap">
            <div id="head">
                <a href="/" title="home">
                    <img src="/content/themes/default/images/Logo.png" alt="logo" />
                </a>
            </div>
            <div id="menu">
                @RenderPage("~/Shared/_Menu.cshtml")
            </div>
            <div class="mask">
                <div class="cols">
                    <div class="main">
                        @RenderBody()
                    </div>
                    <div class="side">
                        @RenderSection("side", required:false)
                    </div>
                </div>
            </div>
            <div id="foot">
                Copyright &copy; @DateTime.Now.Year &mdash; All rights reserved.
            </div>
        </div>
    </body>
</html>
